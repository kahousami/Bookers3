<body>
<div class="body">
<div class="container">
   <%= flash[:notice] %>
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr>
              <th>name</th>
              <th><%= @user.name %><th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <% if @user.id == current_user.id %>
           <%= link_to edit_user_path(@user) do %>
            <p class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></p>
           <%end%>
          <%end%>
        </div>


        <h2>New book</h2>
          <%= form_for(@book) do |f| %>
          <div class="new">Title</div>
          <div><%= f.text_field :title, class: "col-xs-12 field" %></div>
          <div class="new">Opinion</div>
          <div><%= f.text_area :body, class: "col-xs-12 field" %></div>
          <div><%= f.submit 'Create Book', class: "btn btn-primary col-xs-12 field" %></div>
          <% end %>
      </div>

          <div class="col-xs-9">
    	    <h2>Books</h2>
    	    <table class="table table-hover table-inverse">
    		  <thead>
    		    <tr>
     		      <th></th>
    		      <th>Title</th>
    		      <th>Opinion</th>
              <th></th>
    		      <th colspan="4"></th>
     		    </tr>
    		  </thead>

    		  <tbody>
    		  	<% @books.each do |book| %>
    		  	<tr>
    		  	<td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:"40x40" %></td>
    		  	<td><%= link_to book.title, book_path(book.id) %></td>
    		  	<td><%= book.body %></td>
            <td><%= book.book_comments.count %>件コメント</td>

    		  	</tr>
    		  	<%end%>
    		  </tbody>
    		</table>

	  </div>
	</div>
</div>
</div>
</body>
