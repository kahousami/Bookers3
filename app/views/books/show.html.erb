<body>
<div class="body">
<div class="container">

 <%= flash[:notice] %>

    <div class="row">

          <div class="col-xs-3"> 
              <h2>User info</h2>
              <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
              <table class="table">
	          	<tbody>
	          		<tr>
	          			<th>name</th>
	          			<th><%= @user.name %><th>
	          		</tr>
	          		<tr>
	          			<th>introduction</th>
	          			<th><%= @user.introduction %></th>
	          		</tr>
	          	</tbody>
          	  </table>

        <div class="row">
          <% if @user.id == current_user.id %>
           <%= link_to edit_user_path(@user) do %>
            <p class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></p>
           <%end%>
          <%end%>
        </div>


          	<h2>New book</h2>
          		<%= form_for(@book_new) do |f| %>
          		<div class="new">Title</div>
          		<%= f.text_field :title %>
          		<div class="new">Opinion</div>
          		<%= f.text_area :body %>
              <p><%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %></p>
          		<% end %>
          </div>

          <div class="col-xs-9">
			     <h2>Book detail</h2>
			     <table class="table">
		  	 	 <tbody>
		  			<tr>
        			<td><%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, format: 'jpeg', fallback: "no_image.jpg", size: "30x30" %><br>
                <%= link_to @user.name, user_path(@user) %></td>
        			<td><%= link_to @book.title, book_path(@book) %></td>
        			<td><%= @book.body %></td>
              <% if @user.id == current_user.id %>
            		<td><P class="btn-sm btn-success col-xs-4"><%= link_to "Edit", edit_book_path(@book) %></p></td>
            		<td><p class="btn-sm btn-danger col-xs-4"><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></p></td>
              <%end%>
    				</tr>
    			 </tbody>
			     </table>

    </div>


</div>
</div>
</body>