<body>
	<div class="body">
		<div class="container">

	<% if @book.errors.any? %>
		<div id="error_explanation">
    		<h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    		<ul>
    			<% @book.errors.full_messages.each do |msg| %>
       			<li><%= msg %></li>
       			<% end %>
       		</ul>
      	</div>
     <% end %>

			<div class=row>
				<div class="col-md-6 col-md-offset-3">
